<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="4.0dip" />
            <gradient android:startColor="@color/black_50" android:endColor="@color/black_50" android:angle="270.0" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="4.0dip" />
                <gradient android:startColor="@color/main_orange" android:endColor="@color/main_orange" android:angle="270.0" />
            </shape>
        </clip>
    </item>
</layer-list>