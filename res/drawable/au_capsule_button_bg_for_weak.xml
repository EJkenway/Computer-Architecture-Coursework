<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/AU_COLOR_WEAK_DISABLE" />
            <corners android:radius="@dimen/au_capsule_button_corner_radius" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="@color/AU_COLOR_WEAK_PRESSED" />
            <corners android:radius="@dimen/au_capsule_button_corner_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/AU_COLOR_WEAK" />
            <corners android:radius="@dimen/au_capsule_button_corner_radius" />
        </shape>
    </item>
</selector>